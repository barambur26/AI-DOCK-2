providers = ["python"]

[variables]
PYTHON_VERSION = "3.11"
PYTHONPATH = "/app"

[phases.setup]
nixPkgs = ["python311", "postgresql"]

[phases.install]
cmd = "pip install -r requirements.txt"

[phases.build]
cmd = "echo 'Backend deployment ready'"

[start]
cmd = "python -m uvicorn app.main:app --host 0.0.0.0 --port $PORT --workers 1"