providers = ["python"]

[variables]
PYTHON_VERSION = "3.11"
PYTHONPATH = "/app/Back"

[phases.setup]
nixPkgs = ["python311", "postgresql", "gcc", "libffi", "openssl", "cargo", "rustc"]

[phases.install]
cmds = [
  "cd Back",
  "pip install --upgrade pip setuptools wheel",
  "pip install -r requirements.txt"
]

[phases.build]
cmd = "echo 'Backend deployment ready - working directory set to Back'"

[start]
cmd = "cd Back && uvicorn app.main:app --host 0.0.0.0 --port $PORT --workers 1"